{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@config": [
        "config"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
